{
  "name": "one-tag",
  "displayName": "One Tag for C and C++",
  "description": "A powful tag tool based on gtags and ctags",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.54.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:cpp",
    "onLanguage:c",
    "onCommand:one-tag.findSymbols",
    "onCommand:one-tag.gotoSymbol",
    "onCommand:one-tag.findRefer",
    "onCommand:one-tag.showFileSymbols"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "one-tag.findSymbols",
        "title": "ONE-TAG: Find Project Symbols"
      },
      {
        "command": "one-tag.gotoSymbol",
        "title": "ONE-TAG: Goto Symbol"
      },
      {
        "command": "one-tag.findRefer",
        "title": "ONE-TAG: Find Function References"
      },
      {
        "command": "one-tag.showFileSymbols",
        "title": "ONE-TAG: Find Function References of current file"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "One Tag",
      "properties": {
        "one-tag.autoUpdate": {
          "type": "boolean",
          "default": false,
          "description": "Whether Gtags should update automatically or not when saving file. (default: false)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/child-process-promise": "^2.2.1",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "@types/vscode": "^1.54.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "eslint": "^7.27.0",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2"
  },
  "dependencies": {
    "child-process-promise": "^1.1.0"
  }
}
